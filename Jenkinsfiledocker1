pipeline
{
agent any
stages
{
 stage('scm checkout')
 { steps { git branch: 'master', url: 'https://github.com/abdalla-Salaheldin/mavenproject1.git' }}

  stage('execute unit test framework')
 { steps { withMaven(globalMavenSettingsConfig: '', jdk: 'JAVA_HOME', maven: 'MAVEN_HOME', mavenSettingsConfig: '', traceability: true)  {
	sh 'mvn test'
 } }}

stage('build and generate artifact')
 { steps { withMaven(globalMavenSettingsConfig: '', jdk: 'JAVA_HOME', maven: 'MAVEN_HOME', mavenSettingsConfig: '', traceability: true)  {
	sh 'mvn package'
 } }}

stage('build the docker image')
 { steps { sh'docker build -t abdalla7709/mavenproject:1.0 .'
	   sh'docker images'}}

stage('upload docker to docker registary')
 { steps { withDockerRegistry(credentialsId: 'dockercredentials', url: 'https://index.docker.io/v1/') 
	   sh'docker push abdalla7709/mavenproject:1.0}}


}}
